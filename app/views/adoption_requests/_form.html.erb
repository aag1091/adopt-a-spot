<%= form_for @adoption_request, :html => { :class => "form-horizontal adoption_request", multipart: true } do |f| %>

    <% if @adoption_request.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@adoption_request.errors.count, "error") %> prohibited this adoption_request from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @adoption_request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :group_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :group_name, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:group_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :no_of_volunteers, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no_of_volunteers, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:no_of_volunteers]) %>
  </div>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:last_name]) %>
  </div>
  <% if @spot %>
    <%= f.hidden_field :spot_id, value: @spot.id %>
  <% else %>
    <div class="control-group">
      <%= f.label :add1, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :add1, :class => 'form-control' %>
      </div>
      <%= error_span(@adoption_request[:add1]) %>
    </div>
    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'form-control' %>
      </div>
      <%= error_span(@adoption_request[:city]) %>
    </div>
    <div class="control-group">
      <%= f.label :state, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :state, :class => 'form-control' %>
      </div>
      <%= error_span(@adoption_request[:state]) %>
    </div>
    <div class="control-group">
      <%= f.label :zipcode, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :zipcode, :class => 'form-control' %>
      </div>
      <%= error_span(@adoption_request[:zipcode]) %>
    </div>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <%= error_span(@adoption_request[:email]) %>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:phone]) %>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :category_id, Category.all.map{|cat| [cat.name, cat.id]}, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:category_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%= error_span(@adoption_request[:avatar]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            adoption_requests_path, :class => 'btn btn-default' %>

<% end %>
